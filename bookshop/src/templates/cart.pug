doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Bookshop — Cart
  body
    header.header
      .container
        h1.logo Bookshop
        nav.nav
          ul
            li: a(href="index.html") Home
            li: a(href="#") Categories
